<div class="main_wrapper">
  <h3>投稿詳細ページ</h3>
  <div class="table_wrapper">
    <div>
      <p>名前 : <%= @picture.user.name %></p> 
      <p>投稿番号 : <%= @picture.id %></p> 
      <p>コメント : <%= @picture.content %></p>
      <% if @picture.image? %>
        <p>Image: </p>
        <%= image_tag @picture.image.url %>
      <% end %>
    </div>
    <div class="button">
      <%= link_to "編集", edit_picture_path, class: "btn btn-primary button_margin" %>
      <%= link_to "削除", picture_path(@picture.id), method: :delete, data: { confirm: '本当に削除しますか？'}, class: "btn btn-primary button_margin" %>
      <%= link_to "一覧に戻る", pictures_path, class: "btn btn-primary button_margin" %>
    </div>
  </div>
</div>